{% extends 'base.html.twig' %}

{% block title %}Restaurant{% endblock %}

{% block body %}
<div class="center">
    <h1>Restaurant</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ restaurant.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ restaurant.nom }}</td>
            </tr>
            <tr>
                <th>Adresse</th>
                <td>{{ restaurant.adresse }}</td>
            </tr>
            <tr>
                <th>Numéro de téléphone</th>
                <td>{{ restaurant.tel }}</td>
            </tr>
            <tr>
                <th>Produits</th>
                <td><a href="{{ path('restaurant_produits', {'id': restaurant.id}) }}">Voir la liste</a></td>
            </tr>
            <tr>
                <th>Commandes</th>
                <td><a href="{{ path('restaurant_commandes', {'id': restaurant.id}) }}">Voir la liste</a></td>
            </tr>
        </tbody>
    </table>
    
    <div class="buttons">
        <div class="lien"><a href="{{ path('restaurant_index') }}">Retour à liste des restaurants</a></div>
        <div class="lien"><a href="{{ path('restaurant_edit', {'id': restaurant.id}) }}">Modifier</a></div>
        <div class="lien"><a href="{{ path('produit_new', {'id': restaurant.id}) }}">Créer un produit dans ce restaurant</a></div>
        <div class="lien">{{ include('restaurant/_delete_form.html.twig') }}</div>
    </div>
</div>
{% endblock %}
