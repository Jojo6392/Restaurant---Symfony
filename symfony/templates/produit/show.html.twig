{% extends 'base.html.twig' %}

{% block title %}Produit - {{ produit.nom }}{% endblock %}

{% block body %}
<div class="center">
    <h1>Produit - {{ produit.nom }}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ produit.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ produit.nom }}</td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ produit.prix }} €</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ produit.description }}</td>
            </tr>
            <tr>
                <th>Restaurant</th>
                <td>{{ produit.restaurant.nom }}</td>
            </tr>
        </tbody>
    </table>
    <div class="buttons">
        <a class="lien" href="{{ path('produit_index') }}">Listes des produits</a>
        <a class="lien" href="{{ path('produit_edit', {'id': produit.id}) }}">Modifier</a>
        <div class="lien">{{ include('produit/_delete_form.html.twig') }}</div>
        <a class="lien" href="{{ path('restaurant_show', {'id': produit.restaurant.id }) }}">Restaurant où se trouve le produit</a>
    </div>
</div>
{% endblock %}
