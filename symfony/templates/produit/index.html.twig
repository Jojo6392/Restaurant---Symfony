{% extends 'base.html.twig' %}

{% block title %}Produits{% endblock %}

{% block body %}
<div class="center" style="width: 1000px;">
    <h1>Liste des produits</h1>

    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Nom</th>
                <th>Prix</th>
                <th>Description</th>
                <th>Restaurant</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for produit in produits %}
            <tr>
                <td>{{ produit.id }}</td>
                <td>{{ produit.nom }}</td>
                <td>{{ produit.prix }} €</td>
                <td>{{ produit.description }}</td>
                <td>{{ produit.restaurant.nom }}</td>
                <td>
                    <a href="{{ path('produit_show', {'id': produit.id}) }}">Voir</a>
                    <a href="{{ path('produit_edit', {'id': produit.id}) }}">Modifier</a>
                    {{ include('produit/_delete_form.html.twig') }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">Pas de produits trouvés</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <div class="buttons">
        <a class="lien" href="{{ path('restaurant_index') }}">Liste des restaurants</a>
        <a class="lien" href="{{ path('user_index', {'id': app.user.id}) }}">Retour au profil utilisateur</a>
    </div>
    <i>Pour créer un produit, vous devez vous rendre sur la page d'affichage d'un restaurant.</i>
</div>
{% endblock %}
